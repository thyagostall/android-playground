<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thyago.movieboss.MovieDetailFragment">

    <ImageView
        android:layout_width="185dp"
        android:layout_height="278dp"
        android:paddingRight="5dp"
        android:id="@+id/poster" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/movie_title" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:layout_below="@id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_original_title" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:paddingTop="30dp"
        android:layout_below="@id/movie_original_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release_date"
        android:id="@+id/release_date_label" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:layout_below="@id/release_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/release_date" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:layout_below="@id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:id="@+id/rating_label" />

    <TextView
        android:layout_toRightOf="@id/poster"
        android:layout_below="@id/rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating" />

    <TextView
        android:layout_below="@id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:id="@+id/plot" />

</RelativeLayout>
